{
  "Enter location": {
    "title": "Read Location",
    "description": "Reads a location with options",
    "minOccurs": 1,
    "schema": {
      "title": "A localisation form example",
      "type": "object",
      "required": [
        "geoCoordinates",
        "boundingBox"
      ],
      "properties": {
        "geoCoordinates": {
          "type": "object",
          "title": "Enter a point",
          "required": [
            "lat",
            "lon"
          ],
          "properties": {
            "crs": {
              "type": "string"
            },
            "lat": {
              "default": 0,
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "lon": {
              "default": 0,
              "type": "number",
              "minimum": -180,
              "maximum": 180
            }
          }
        },
        "boundingBox": {
          "type": "object",
          "properties" : {
            "crs": {
              "type": "string"
            },
            "coordinates": {
              "type": "array",
              "title": "Bounding Box",
              "minItems": 4,
              "maxItems": 4,
              "items": [
                { "type": "number",
                  "title": "Min Longitude",
                  "default": -1
                },
                { "type": "number",
                  "title": "Min Latitude",
                  "default": -1
                },
                { "type": "number",
                  "title": "Max Longitude",
                  "default": 1
                },
                { "type": "number",
                  "title": "Max Latitude",
                  "default": 1
                }
              ]
            }
          }
        },
        "polygon": {
          "type": "object",
          "properties": {
            "crs": "string",
            "coordinates": {
              "type": "array",
              "title": "Polygon",
              "default": [[[-6,4],[7,4],[7,-6],[-6,-6],[-6,4]]],
              "items": {
                "type": "array",
                "minItems": 4,
                "items": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    },
    "additionalParameters": {
      "parameters": [
        {
          "name": "uiSchema",
          "value": {
            "geoCoordinates": {
              "ui:field": "geo"
            },
            "boundingBox": {
              "ui:field": "bbox"
            },
            "polygon": {
              "ui:field": "polygon"
            }
          }
        }
      ]
    }
  }
}

